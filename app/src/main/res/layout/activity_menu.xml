<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_item_outside_background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一部分"
        android:layout_margin="5dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/theme_item_inside_foreground">
        <RelativeLayout
            android:id="@+id/relativelayout_ioc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_marginTop="0.5dp">
            <TextView
                android:id="@+id/textview_ioc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:text="jackknife-ioc"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/textview_ioc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/cyan"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/textview_ioc_name"
                android:text="自动设置Layout、绑定View和注册Event"
                android:ellipsize="end"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_item_outside_background"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:id="@+id/relativelayout_commonadapter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/theme_item_inside_foreground"
            android:clickable="true"
            android:layout_marginTop="0.5dp">
            <TextView
                android:id="@+id/textview_commonadapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:text="CommonAdapter"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/textview_commonadapter_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/cyan"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/textview_commonadapter_name"
                android:text="万能AdapterView适配器"
                android:ellipsize="end"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_item_outside_background"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:id="@+id/relativelayout_mvp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/theme_item_inside_foreground"
            android:clickable="true"
            android:layout_marginTop="0.5dp">
            <TextView
                android:id="@+id/textview_mvp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:text="jackknife-mvp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/textview_mvp_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/cyan"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/textview_mvp_name"
                android:text="MVP设计理念的开发"
                android:ellipsize="end"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_item_outside_background"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:id="@+id/relativelayout_orm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/theme_item_inside_foreground"
            android:clickable="true"
            android:layout_marginTop="0.5dp">
            <TextView
                android:id="@+id/textview_orm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:text="jackknife-orm"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/textview_orm_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/cyan"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/textview_orm_name"
                android:text="数据库关系映射框架"
                android:ellipsize="end"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
