<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jackknife="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <com.lwh.jackknife.widget.InstrumentView
        android:id="@+id/instrumentview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        jackknife:instrumentview_backgroundColor="@color/white"
        jackknife:instrumentview_annulusColor="@color/gray"
        jackknife:instrumentview_annulusHoverColor="@color/blue"
        jackknife:instrumentview_title="储水量"
        jackknife:instrumentview_titleTextColor="@color/light_sky_blue"
        jackknife:instrumentview_titleTextSize="30sp"
        jackknife:instrumentview_body="0万吨"
        jackknife:instrumentview_bodyTextColor="@color/gray"
        jackknife:instrumentview_bodyTextSize="20sp"
        jackknife:instrumentview_annulusWidth="15dp"
        jackknife:instrumentview_animationTime="500"/>
</LinearLayout>