<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jackknfie="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none" />
    <com.lwh.jackknife.widget.LetterView
        android:id="@+id/letterview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        jackknfie:letterview_hoverBackgroundDrawable="@drawable/shape_letterview_bg"
        jackknfie:letterview_hoverTextColor="#389CFF"
        jackknfie:letterview_textColor="@color/gray"
        jackknfie:letterview_letters="â†‘ABCDEFGHIJKLMNOPQRSTUVUXYZ#"
        jackknfie:letterview_textAllCaps="true"/>
    <TextView
        android:id="@+id/textview_dialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_letterview_dialog_bg"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:visibility="gone"/>
</FrameLayout>