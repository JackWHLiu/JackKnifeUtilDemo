<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jackknife="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lwh.jackknife.widget.RadarView
        android:id="@+id/radarview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        jackknife:radarview_radarColor="@color/green"
        jackknife:radarview_annulusColor="@color/gray"
        jackknife:radarview_circleRadius="20dp"
        jackknife:radarview_spaceRadius="15dp"
        jackknife:radarview_annulusWidth="1dp"
        jackknife:radarview_rotateRate="slow"
        jackknife:radarview_reverse="true"
        jackknife:radarview_annulusNum="10"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/device"/>
</FrameLayout>