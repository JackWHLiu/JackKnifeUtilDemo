<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jackknife="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lwh.jackknife.widget.VerifyCodeEditTextGroup
        android:id="@+id/verifyCodeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        jackknife:autoedittextgroup_sectionTextSize="15sp"
        jackknife:autoedittextgroup_semicolonTextSize="12sp"
        jackknife:autoedittextgroup_sectionPadding="2dp"
        jackknife:autoedittextgroup_semicolonPadding="1dp"
        jackknife:verifycodeedittextgroup_type="lengthSix"
        android:focusableInTouchMode="true"
        android:layout_margin="10dp"/>
</LinearLayout>