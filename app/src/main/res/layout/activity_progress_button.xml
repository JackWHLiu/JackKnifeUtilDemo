<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jackknife="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <com.lwh.jackknife.widget.ProgressButton
        android:id="@+id/mProgressButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        jackknife:progressbutton_cornerRadius="20dp"
        jackknife:progressbutton_backgroundColor="#3385FF"
        jackknife:progressbutton_secondaryBackgroundColor="@color/white"
        jackknife:progressbutton_textColor="#3385FF"
        jackknife:progressbutton_hoverTextColor="@color/white"
        jackknife:progressbutton_borderWidth="2dp"
        jackknife:progressbutton_ballRadius="1dp"
        jackknife:progressbutton_ballSpacing="1dp"
        jackknife:progressbutton_textSize="15sp"
        jackknife:progressbutton_showBorder="true"/>
    <Button
        android:id="@+id/mResetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="重置"
        android:textColor="@color/white"
        android:background="@color/black"/>
</LinearLayout>